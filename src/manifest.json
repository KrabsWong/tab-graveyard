{
  "manifest_version": 3,
  "name": "Tab Graveyard",
  "version": "1.0.0",
  "description": "Manage your tabs efficiently by tracking their last access time. Supports dark mode and provides visual indicators for tab age.",
  "author": "KrabsWong",
  "homepage_url": "https://github.com/KrabsWong/tab-graveyard",
  "default_locale": "en",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "tabGroups"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "minimum_chrome_version": "88",
  "offline_enabled": true
}